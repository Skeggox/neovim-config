{
  "languageserver": {
      "ccls": {
          "command": "ccls",
          "args": ["-log-file=/tmp/ccls.log", "-v=5"],
          "filetypes": ["h", "c", "cuda", "objc", "objcpp"],
          "rootPatterns": ["compile_commands.json", ".ccls", ".ccls-root", ".vim", ".git", ".svn"],
          "initializationOptions": {
            "cache": {
              "directory": "/tmp/cache/ccls"
            },
            "client": {
                "snippetSupport": true
            },
            "highlight": { "lsRanges" : true }
          }
    }
  }
}
